#!/usr/bin/env ruby

require "bundler/setup"
require "./lib/tic_tac_toe_game/game"

require "./lib/tic_tac_toe_game/language_settings"

puts "Please chose your preferred language"
puts "1. English"
puts "2. Igbo"
print "Choice: "

language_choice = gets.chomp


if language_choice == "1"
    include English
else
    include Igbo
end



TicTacToeGame::LaunchGame.new.play_game
